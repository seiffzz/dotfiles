[
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space space": "file_finder::Toggle",
      "space ,": "tab_switcher::Toggle",
      "space e": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      "ctrl-h": ["workspace::SendKeystrokes", "ctrl-w h"],
      "ctrl-l": ["workspace::SendKeystrokes", "ctrl-w l"],
      "ctrl-j": ["workspace::SendKeystrokes", "ctrl-w j"],
      "ctrl-k": ["workspace::SendKeystrokes", "ctrl-w k"],
      "ctrl-w x": ["workspace::SendKeystrokes", "shift-z shift-q"]
    }
  },
  {
    "context": "Editor && showing_completions",
    "bindings": {
      "ctrl-y": "editor::ConfirmCompletion"
    }
  },
  {
    "context": "Editor && showing_code_actions",
    "bindings": { "ctrl-y": "editor::ConfirmCodeAction" }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space c a": "editor::ToggleCodeActions",
      "space c r": "editor::Rename"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": { "j k": ["workspace::SendKeystrokes", "escape"] }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "shift-j": "editor::MoveLineDown",
      "shift-k": "editor::MoveLineUp"
    }
  },
  {
    "context": "Dock",
    "bindings": {
      "ctrl-h": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-l": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-j": ["workspace::ActivatePaneInDirection", "Down"]
    }
  },
  {
    "context": "TabSwitcher",
    "bindings": {
      "ctrl-y": "menu::Confirm"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "space e": "workspace::ToggleRightDock",
      "space": null
    }
  }
]
