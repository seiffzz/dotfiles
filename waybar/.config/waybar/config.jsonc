{
	"layer": "top",
	"margin-left":10,
	"margin-right":10,
	"modules-left": ["hyprland/workspaces"],
	"modules-center": ["clock"],
	"modules-right": ["pulseaudio"],
	"hyprland/window": {
		"max-length": 50
	},
	"clock": {
		"format": "{:%a, %d. %b  %H:%M}"
	},
	"hyprland/workspaces":{
		"persistent-workspaces": {
			"*": 4
		}
	},
	"pulseaudio": {
		"format": "{icon}  {volume}%",
		"format-muted": "",
		"format-icons": {
			"default": ["", ""]
		},
		"on-click": "pavucontrol"
	}
}
