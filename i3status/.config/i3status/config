# i3status configuration file
general {
    output_format = "i3bar"
    colors = false
    interval = 5
    separator = ":-:"
}

# Order of blocks
order += "workspaces"
order += "volume master"
order += "ethernet eno2"
order += "tztime local"

# Time in the center

tztime local {
    format = "%d %b-%H:%M "
}

ethernet eno2 {
    format_up = " 󰈀 "
    format_down = " 󰈂 "
}

volume master {
        format = "󰕾 :%volume"
        format_muted = "󰖁 :muted"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
